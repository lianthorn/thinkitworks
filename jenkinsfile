pipeline {
    agent any
    
    stages {
        stage ('Test application main') {
            when {
                branch 'feature/main'
            }
            steps {
                echo 'Test passed in main!'
            }
        }
        stage ('Test application dev') {
            when {
                branch 'feature/develop'
            }
            steps {
                echo 'Test passed in develop!'
            }
        }
        stage ('Deploy application') {
            steps {
                echo 'Deploy finished!'
            }
        }
        stage ('Check application files') {
            steps {
                echo 'Files checked!'
            }
        }
    }
}
