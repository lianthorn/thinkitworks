pipeline {
    agent any
    
    enviroment {
        main = 'git@feature/main'
        dev = 'git@feature/main'
    }
    
    stages {
        stage ('Test application main') {
            when {
                branch 'feature/main'
            }
            steps {
                echo 'Test passed in main!' && '$main'
            }
        }
        stage ('Test application dev') {
            when {
                branch 'feature/develop'
            }
            steps {
                echo 'Test passed in develop!' && echo '$dev'
            }
        }
        stage ('Deploy application') {
            steps {
                echo 'Deploy finished!'
            }
        }
        stage ('Check application files') {
            steps {
                echo 'Files checked!'
            }
        }
    }
}
